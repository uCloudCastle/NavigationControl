<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <attr name="scrollOrientation">
        <enum name="horizontal" value="0"/>
        <enum name="vertical" value="1"/>
    </attr>

    <attr name="scrollMode">
        <enum name="scrollPage" value="0"/>
        <enum name="scrollCell" value="1"/>
    </attr>

    <declare-styleable name="LtGridView">
        <attr name="scrollOrientation"/>
        <attr name="scrollMode"/>
        <attr name="focusDrawable" format="reference"/>
        <attr name="shadowLeft" format="dimension"/>
        <attr name="shadowRight" format="dimension"/>
        <attr name="pageSpacing" format="dimension"/>
        <attr name="isNeedLayerTypeToSoftWare" format="boolean"/>
        <attr name="isNeedFocusScaleAnim" format="boolean"/>
        <attr name="fadingEdgeEnable" format="boolean" />
        <attr name="fadingEdgeDrawable" format="reference" />
        <attr name="fadingEdgeArrowLeft" format="reference" />
        <attr name="fadingEdgeArrowRight" format="reference" />
    </declare-styleable>

    <declare-styleable name="SlantedTextView">
        <attr name="slantedTextSize" format="dimension"/>
        <attr name="slantedBackgroundColor" format="color"/>
        <attr name="slantedText" format="string"/>
        <attr name="slantedTextColor" format="color"/>
        <attr name="slantedLength" format="dimension"/>
        <attr name="slantedMode" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="left_bottom" value="2"/>
            <enum name="right_bottom" value="3"/>
            <enum name="left_triangle" value="4"/>
            <enum name="right_triangle" value="5"/>
            <enum name="left_bottom_triangle" value="6"/>
            <enum name="right_bottom_triangle" value="7"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SquareMaskView">
        <attr name="image" format="reference" />
        <attr name="mask" format="reference" />
    </declare-styleable>
</resources>
