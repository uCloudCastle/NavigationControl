<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg_gray"/>

    <View
        android:id="@+id/item_content_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_content_picture"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/item_content_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_content_title"
        android:layout_alignRight="@id/item_content_picture"
        android:gravity="center_horizontal" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_content_picture"
        android:layout_alignTop="@id/item_content_subtitle"
        android:layout_alignBottom="@id/item_content_subtitle"
        android:background="@drawable/icon_download"/>

</RelativeLayout>