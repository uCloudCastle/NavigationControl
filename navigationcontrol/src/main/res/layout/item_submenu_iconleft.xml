<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/app_bg">

    <View
        android:id="@+id/item_submenu_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg_dark"/>

    <com.china_liantong.navigationcontrol.widgets.SlantedTextView
        android:id="@+id/item_submenu_tag"
        android:layout_width="@dimen/submenu_item_slanted_textview_default_size"
        android:layout_height="@dimen/submenu_item_slanted_textview_default_size"
        app:slantedMode="left_triangle"
        app:slantedTextColor="@color/submenu_item_slanted_textview_textcolor"
        app:slantedTextSize="@dimen/submenu_item_slanted_textview_text_size"/>

    <View
        android:id="@+id/item_submenu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_submenu_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/item_submenu_icon"
        android:gravity="center"/>

</RelativeLayout>